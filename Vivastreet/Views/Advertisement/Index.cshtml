@model IEnumerable<Vivastreet.Models.Advertisement>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class=" text-primary">Advertisement List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Upsert" class="btn btn-primary">
                    <i class="fas fa-plus"></i> &nbsp; Create New Advert</a>
                
            </div>
        </div>

        <br /> <br />

        @if(Model.Count() > 0)
        {
            <table class=" table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Post Code
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Condition
                        </th>
                        
                        <th>
                            Material
                        </th>
                        <th>
                            Age
                        </th>
                        <th>
                            
                        </th>

                    </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="15%">@obj.Title</td>
                        <td width="15%">@obj.PostCode</td>
                        <td width="15%">@obj.Category.Name</td>
                        <td width="15%">@obj.Condition.Name</td>
                        <td width="15%">@obj.Material.Name</td>
                        <td width="15%">@obj.SelectAge.Age</td>
                        @*<td width="30%">@obj.AdvertisementId</td>*@
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                             <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-outline-primary mx-2">
                                 <i class="fas fa-edit"></i> 
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-outline-danger mx-2">
                                <i class="far fa-trash-alt"></i>
                            </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
        </table>
    }
    else
    {
        <p> No Advert exists, please create an Advert.</p>
    }
</div>