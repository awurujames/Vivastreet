@model IEnumerable<Vivastreet.Models.Condition>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class=" text-primary">Condition List</h2>
            </div>
            <div class="col-6 text right">
                <a asp-controller="Condition" asp-action="Create" class="btn btn-primary">Create New Condition</a>
                
            </div>
        </div>

        <br /> <br />

        @if(Model.Count() > 0)
        {
            <table class=" table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Condition Name.
                        </th>
                        <th>
                            
                        </th>

                    </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="80%">@obj.Name</td>
                        @*<td width="30%">@obj.AdvertisementId</td>*@
                        <td></td>
                    </tr>
                }
                </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }
</div>