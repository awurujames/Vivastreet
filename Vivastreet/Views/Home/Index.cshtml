
@model Vivastreet.ViewModel.HomeViewModel

@using Vivastreet_Models

  

@{
    ViewData["Title"] = "Index";

    Pager pager = new Pager();


    int pageNo = 0;

    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="container">
    <div class="container-Add mt-10">

        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <div class="main-cont col-mg-12 row p-3">


                <div class="premier-banner col-2 border p-3">

                    <div class="premier-bannerj btn btn border  p-3">

                        <div class="col">
                            <label asp-for="Advertisement.Category"></label>

                        </div>
                        <div class="col">
                            <select asp-for="CategoryId" asp-items="@Model.CategorySelectListItems" class="form-control">
                                <option disabled selected>-Select-</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="premier-banner col-2 border p-3">

                    <div class=" premier-bannerj btn btn border p-3">

                        <div class="col">
                            <label asp-for="Advertisement.Material">City</label>
                        </div>

                        <div class="col">
                            <select asp-for="CityId" asp-items="@Model.MaterialSelectListItems" class="form-control">
                                <option disabled selected>-Select-</option>
                            </select>

                        </div>
                    </div>

                </div>

                <div class="premier-banner col-2 border p-3">

                    <div class=" premier-bannerj border p-3  row">

                        <div class="col-6">
                            <div class="col width="50%"">
                                <label asp-for="Advertisement.Condition">Rate</label>
                            </div>
                            <div class="col">
                                <select asp-for="RateMinId" asp-items="@Model.RateSelectListItems" class="form-control">
                                    <option disabled selected>Min</option>
                                </select>
                            </div>

                        </div>

                        <div class="col-6">
                            <div class="col">
                                <label></label>
                            </div>
                            <div class="col-12">
                                <select asp-for="RateMaxId" asp-items="@Model.RateSelectListItems" class="form-control">
                                    <option disabled selected>Max</option>
                                </select>
                            </div>

                        </div>

                    </div>

                </div>

                <div class="premier-banner col-2 border p-3">

                            <div class=" premier-bannerj border p-3 row">

                                <div class="col-6">
                                    <div class="col">
                                        <label asp-for="Advertisement.Condition">Age</label>
                                    </div>
                                    <div class="col">
                                        <select asp-for="SelectAgeMinId" asp-items="@Model.AgeSelectListItem" class="form-control">
                                            <option disabled selected>Min</option>
                                        </select>
                                    </div>

                                </div>

                                <div class="col-6">
                                    <div class="col">
                                        <label></label>
                                     </div>
                                    <div class="col-12">
                                        <select asp-for="SelectAgeMaxId" asp-items="@Model.AgeSelectListItem" class="form-control">
                                            <option disabled selected>Max</option>
                                        </select>
                                    </div>

                                </div>
                            </div>
                </div>

                <div class="premier-banner col-2 border p-3">

                    <div class="premier-bannerj btn btn border p-3">

                        <div class="col">
                            <label asp-for="Advertisement.Condition"></label>
                        </div>
                        <div class="col">
                            <select asp-for="Advertisement.ConditionId" class="form-control">
                                <option disabled selected>-Select-</option>
                                @{
                                    foreach (var item in Model.ConditionSelectListItems)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }

                            </select>
                        </div>
                    </div>

                </div>

                <div class="premier-banner col-2 border p-3">

                    <div class="premier-bannerj btn btn border p-3">

                        <div class="col">
                            <label asp-for="ConditionId">Services Offered</label>
                        </div>
                        <div class="col">
                            <select asp-for="ConditionId" asp-items="@Model.ConditionSelectListItems" class="form-control">
                                <option disabled selected>-Age-</option>
                            </select>
                        </div>

                    </div>
                     <div class="SearchBtn mt-3">
                        <div class="SearchBtn w-50% btn btn-danger border p-3 d-sm-inline-flex flex-sm-row-reverse">
                        <input type="submit" id="submitId" value="Search>>" />
                      </div>
                    </div>

                </div>

            </div>
           
        }
        <div class="container-Add mt-10">
            <div class="main-cont row">

                <div class="premier-banner3 col-6 border p-3">
                    <h3>Premier Banner</h3>
                </div>

                <div class="premier-banner3 col-6 border p-3">
                    <h3>Ad Of The Week</h3>
                </div>

            </div>
        </div>

        <br />
        <div class="row">
            @foreach (var item in Model.Advertisements)
            {
                @*if (item.AdvertisementType == '')
                {
                    
                }*@
                <partial name="_IndividualAdvertCard" model="item" />
                //display all product
            }
        </div>
    </div>

