@model Vivastreet_Models.Advertisement
@if(Model.AdvertisementType == "PremierBanner")
{
    <div class="IndividualCartPremierBanner  col-lg-12 col-md-6 pb-4" filter @Model.Category.Name.Replace(' ', '_')>
            <!-- Card-->
        <div class="PremierBannerCss card bg-white rounded shadow-sm" style="border:1px solid #222">

            <div class="card-body px-3 pt-3 pb-1 row">
                <div class="col-7"><label class="float-left"><span class="text-Warning h5">@Model.Title</label></div>
                @*<div class="col-5"><label class="float-right"><span class="text-warning h5">@Model.Title</span></label> </div>*@
                <div class="col-4">
                    <span class="badge p-2  w-100 text-info" style="background-color: ">@Model.Category.Name</span>
                </div>
            </div>

            <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@Vivastreet_Utility.WC.ImagePath@Model.Image" alt="Card image cap">
            <div class="card-body p-1 px-3 row">
                @*<div class="col-4">
                    <span class="badge p-2  w-100 text-info" style="background-color: ">@Model.Category.Name</span>
                </div>

                <div class="col-4 border-0">
                    <span class="badge p-2 border w-100 text-info" style="background-color:  ">@Model.Material.Name</span>
                </div>

                <div class="col-12 pt-2" style="font-size:13px; text-align:justify" >
                    <p>@Model.Description</p>
                </div>*@

                <div class="col-12 p-1">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn  form-control btn-sm p-2" style="height:40px"><span class="text-warning h6">View Details</a>
                </div>
            </div>
        </div>
    </div>  
}

