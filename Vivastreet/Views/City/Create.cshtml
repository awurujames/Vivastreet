@model Vivastreet_Models.City

<form method="post" asp-action="Create">
    <div class=" border p-3">

        <div asp-validation-summary="ModelOnly" class="text-black text-danger"></div>

        <div class="form-group row">
            <h2 class="text-info pl-3">Add City</h2>
        </div>

        <div class="row">
    <div class="col-8 border p-3">
        <div class="form-group row pt-3">
            <div class="col-4">
                <label asp-for="CityName"></label>
            </div>
            <div class="col-8">
                <input asp-for="CityName" class="form-control"/>
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>

        </div>
        
       
        <div class="form-group row pt-3">
            <div class="col-8 offset-4 row">

                <div class="col">
                    <input type="submit" class="btn btn-primary w-100" value="Create"/>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-100"Back><i class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>
        </div>
    </div>
        <div class="col-4">
            @* Keep this empty *@
        </div>
     </div>
    </div>

    
</form>
@section Scripts{

  @{<partial name="_ValidationScriptsPartial"/>}
}
