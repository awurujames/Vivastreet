@model Vivastreet.Models.ViewModel.AdvertisementViewModel

@{
    var title = "Create Advert";
}


<form method="post" enctype="multipart/form-data">

    @if(Model.Advertisement.Id != 0)
    {
        title = "Edit Advert";
        <input asp-for="Advertisement.Id" hidden/>
    }

    <div class=" border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>

        <div class="row">
    <div class="col-8 border p-3">
        <h4 class="radioclass"> Post Your Free Add Here</h4>

        <div class="form-group row  pt-3">
            <div class="col-4">
                <label asp-for="Advertisement.Category"></label>
            </div>
            <div class="col-8">  
                <select asp-for="Advertisement.CategoryId" asp-items="@Model.CategorySelectListItems" class="form-control">
                    <option disabled selected>--Select Category--</option>
                </select>
                <span asp-validation-for="Advertisement.CategoryId" class="text-danger"></span>
            </div>

        </div>

        <div class="radioclass ">
            <div class="form-check pt-2">
              <input asp-for="Advertisement.PremierBanner"  class="form-check-input" value="abc" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
              <label asp-for="Advertisement.PremierBanner"></label>
            </div>

             <div class="form-check pt-2">
              <input asp-for="Advertisement.AddvertOTheWeek"  class="form-check-input" value="abc" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
              <label asp-for="Advertisement.AddvertOTheWeek"></label>
            </div>

             <div class="form-check pt-2">
              <input asp-for="Advertisement.ClassicAdvert"  class="form-check-input" value="abc" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
              <label asp-for="Advertisement.ClassicAdvert"></label>
            </div>
@*
            <div class="form-check pt-2">
              <input asp-for"" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
              <label class="form-check-label" for="flexRadioDefault1">
                Add of the week
              </label>
            </div>

            <div class="form-check pt-2">
              <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
              <label class="form-check-label" for="flexRadioDefault1">
                Classic Advert
              </label>
            </div>*@
        </div>
        
        <div class="form-group row  pt-3">
            <div class="col-4">
                <label asp-for="Advertisement.PostCode"></label>
            </div>
            <div class="col-8">
                <input asp-for="Advertisement.PostCode" class="form-control"/>
                <span asp-validation-for="Advertisement.PostCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row pt-3">
            <div class="col-4">
                <label asp-for="Advertisement.Title"></label>
            </div>
            <div class="col-8">
                <input asp-for="Advertisement.Title" class="form-control"/>
                <span asp-validation-for="Advertisement.Title" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row  pt-3">
            <div class="col-4">
                <label asp-for="Advertisement.Description"></label>
            </div>
            <div class="col-8">  
                <textarea asp-for="Advertisement.Description" class="form-control summernote"></textarea>
                <span asp-validation-for="Advertisement.Description" class="text-danger"></span>
            </div>

        </div>


        <div class="form-group row  pt-3">
            <div class="col-4">
                <label asp-for="Advertisement.PostCode"></label>
            </div>
            <div class="col-8">
                <input asp-for="Advertisement.PostCode" class="form-control"/>
                <span asp-validation-for="Advertisement.PostCode" class="text-danger"></span>
            </div>
        </div>



            <label>Language</label>
        <div class="new-checkbox ">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1" />
                <label class="form-check-label" for="inlineCheckbox1">English</label>
            </div>

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2" />
              <label class="form-check-label" for="inlineCheckbox2">Italian</label>
            </div>

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3" />
              <label class="form-check-label" for="inlineCheckbox3">Russian</label>
            </div>
        </div>

        <div class="new-checkbox ">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1" />
                <label class="form-check-label" for="inlineCheckbox1">Spanish</label>
            </div>

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2" />
              <label class="form-check-label" for="inlineCheckbox2">German</label>
            </div>

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3"  />
              <label class="form-check-label" for="inlineCheckbox3">Chineese</label>
            </div>
        </div>

        <div class="new-checkbox ">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1" />
                <label class="form-check-label" for="inlineCheckbox1">French</label>
            </div>

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2" />
              <label class="form-check-label" for="inlineCheckbox2">Portugese</label>
            </div>

            <div class="form-check form-check-inline">
              <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3"  />
              <label class="form-check-label" for="inlineCheckbox3">Other</label>
            </div>
        </div>

        <div class="form-group row ">
            <div class="col-4">
                Image
            </div>
            <div class="col-8">
                <input type="file" name="files" id="uploadBox" multiple class="form-control"/>
            </div>
        </div>
           
        <div class="form-group row pt-3">
            <div class="col-8 offset-4 row">
                @if(Model.Advertisement.Id != 0)
                {
                    //update
                    <div class="col">
                        <input type="submit" class="btn btn-primary w-100" value="Updat "/>
                    </div>
                }
                else
                {
                    //Create
                    <div class="col">
                        <input type="submit" onclick="return validateInput()" class="btn btn-info w-100" value="Create "/>
                    </div>
                }
                        <div class="col">
                    <a asp-action="Index" class="btn btn-success w-100"Back>
                        <i class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>
        </div>
    </div>
        <div class="col-4">
            @* Keep this empty *@
        </div>
     </div>
    </div>

    
</form>
@section Scripts{

  @{<partial name="_ValidationScriptsPartial"/>}

    <script>
        $(document).ready(function() {
            $('.summernote').summernote({
                height:200
            });
            });
        function validateInput() {
            if (document.getElementById('uploadBox').value == "") {
                 Swal.fire(
                  'Error!',
                  'Please upload an Image!',
                  'error'
                )
                return false;
            }
            return true;
            }
    </script>
}
