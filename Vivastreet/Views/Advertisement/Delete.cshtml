                <div class="col-4">
                    Image
                </div>
                <div class="col-8">
                    <input type="file" name="files" id="uploadBox" multiple class="form-control"/>
                </div>
            </div>*@
            <br/>
            <br/>
            <br/>

            <hr/>
            <h3>
                Your personal Information
            </h3>

            <div class="form-group row pt-3">
                <div class="col-4">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-4">
                <input type="tel" id="number" class="form-control">

                </div>

            </div>


             <div class="new-checkbox">
                <input asp-for="ShowPhoneNumber" type="checkbox" class="form-check-input" id="exampleCheck1">
                <label asp-for="ShowPhoneNumber"></label>
            </div>

            <div class="form-group row pt-3">
                <div class="col-4">
                    <label asp-for="EmailAddress"></label>
                </div>

                <div class="col-8">
                    <input asp-for="EmailAddress" class="form-control" aria-describedby="emailHelp" placeholder="Enter email"/>
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
               
            </div>
           
            <div class="form-group row pt-3">
                <div class="col-8 offset-4 row">
                   
                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100" >Delete</button>
                        </div>
                    
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"Back>
                            <i class="fas fa-sign-out-alt"></i></a>
                        </div>
                </div>
            </div>
        </div>

        <div class="col-4">
            @* Keep this empty *@
            @if (Model.Id != 0)
                {
                    <img src="@Vivastreet_Utility.WC.ImagePath@Model.Image" class="w-100" style="border-radius:5px; border:1px solid #bbb"/>
                    
                }

        </div>
     </div>
    </div>

    
</form>
@section Scripts{

  @{<partial name="_ValidationScriptsPartial"/>}

    <script>

        $(document).ready(function() {
                $('.summernote').summernote({
                    height:200
                    disable: true
                });
            });
       

    </script>
}
