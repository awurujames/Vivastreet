@model Vivastreet_Models.Advertisement


<form method="post">

        <input asp-for="Id" hidden/>

    <div class=" border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Advert</h2>  
        </div>

        <div class="row">
            <div class="col-8 border p-3">
                 <h4 class="radioclass"> Post Your Free Add Here</h4>

             <div class="form-group row  pt-3">
                <div class="col-4">
                    <label asp-for="CategoryId"></label>
                </div>
                <div class="col-8">  
                    <input asp-for="Category.Name" disabled class="form-control"/>
                </div>

            </div>

            <div class="radioclass "> 
                <div class="form-check pt-2">
                    @Html.RadioButtonFor(m => m.AdvertisementType,"PremierBanner")
                  <label>Premier Banner</label>
                </div>

                 <div class="form-check pt-2">
                    @Html.RadioButtonFor(m => m.AdvertisementType,"AdvertOfTheWeek")

                  <label>Advert Of TheWeek</label>
                </div>

                 <div class="form-check pt-2">
                    @Html.RadioButtonFor(m => m.AdvertisementType,"ClassicAdvert")
                  <label>Classic Advert</label>
                </div>

            </div>
        
            <div class="form-group row  pt-3">
                <div class="col-4">
                    <label asp-for="PostCode"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PostCode" class="form-control"/>
                </div>
            </div>

            <div class="form-group row pt-3">
                <div class="col-4">
                    <label asp-for="Title"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Title" class="form-control"/>
                </div>

            </div>

            <div class="form-group row  pt-3">
                <div class="col-4">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-8">  
                    <textarea asp-for="Description" class="form-control summernote"></textarea>
                </div>
            </div>
        
             <div class="form-group row  pt-3">
                <div class="col-4">
                    <label asp-for="MaterialId"></label>
                </div>
                <div class="col-8">  
                    <input asp-for="Material.Name" disabled class="form-control"/>
                </div>

            </div>

              <div class="form-group row  pt-3">
                <div class="col-4">
                    <label asp-for="SelectAgeId"></label>
                </div>
                <div class="col-8">  
                    <input asp-for="SelectAge.Age" disabled class="form-control"/>
                </div>

            </div>

             <div class="form-group row  pt-3">
                <div class="col-4">
                    <label asp-for="ConditionId"></label>
                </div>
                <div class="col-8">  
                    <input asp-for="Condition.Name" disabled class="form-control"/>
                </div>

            </div>

                <label>Language</label>
