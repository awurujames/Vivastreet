@model IEnumerable<Vivastreet_Models.Material>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class=" text-primary">Material List</h2>
            </div>
            <div class="col-6 text right">
                <a asp-controller="Material" asp-action="Create" class="btn btn-primary"> <i class="fas fa-plus"></i> &nbsp; Create New Material</a>
                
            </div>
        </div>

        <br /> <br />

        @if(Model.Count() > 0)
        {
            <table class=" table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Material Name.
                        </th>
                        <th>
                            Material Type.
                        </th>
                        <th>
                            Durability.
                        </th>
                        
                        <th>
                            
                        </th>

                    </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="28%">@obj.Name</td>
                        <td width="28%">@obj.Type</td>
                        <td width="28%">@obj.Durability</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                             <a asp-controller="Material" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-outline-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="Material" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-outline-danger mx-2">
                                <i class="far fa-trash-alt"></i>
                            </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }
</div>