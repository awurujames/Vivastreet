                  <input asp-for="Chinese" class="form-check-input" type="checkbox" id="inlineCheckbox3" value=""  />
                  <label asp-for="Chinese"></label>
                </div>

                <div class="form-check form-check-inline">
                  <input asp-for="Other" class="form-check-input" type="checkbox" id="inlineCheckbox3" value=""  />
                  <label asp-for="Other"></label>
                </div>
            </div>

            <label>Services Offered</label>
        

            <div class="new-checkbox ">
                <div class="form-check form-check-inline">
                  <input asp-for="IsDeliveryService" class="form-check-input" type="checkbox" id="inlineCheckbox3" value=""  />
                  <label asp-for="IsDeliveryService"></label>
                </div>

                <div class="form-check form-check-inline">
                  @*<input asp-for="Advertisement.German" class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3"  />
                  <label asp-for="Advertisement.German"></label>*@
                </div>

                <div class="form-check form-check-inline">
                  <input asp-for="DeliveryServiceFee" class="form-control" type="form-control" id="inlineCheckbox3" value=""  />
