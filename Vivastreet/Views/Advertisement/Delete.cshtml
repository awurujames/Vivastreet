            </div>

            <div class="new-checkbox ">
                <div class="form-check form-check-inline">
                  <input asp-for="IsPickUpService" class="form-check-input" type="checkbox" id="inlineCheckbox3" value=""  />
                  <label asp-for="IsPickUpService"></label>
                </div>

                <div class="form-check form-check-inline">
                  @*<input asp-for="Advertisement.Chinese" class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3"  />
                  <label asp-for="Advertisement.Chinese"></label>*@
                </div>

                <div class="form-check form-check-inline">
                    <div class="col-2">
                        <label asp-for="PickUpServiceFee"></label>
                    </div>
                    <div class="col-4">
                         <input asp-for="PickUpServiceFee" class="form-control" type="form-control" id="inlineCheckbox3"  />
                    </div>
                </div>
            </div>

            <div class="new-checkbox ">
                <div class="form-check form-check-inline">
                  <input asp-for="IsInstallationService" class="form-check-input" type="checkbox" id="inlineCheckbox3" value=""  />
                  <label asp-for="IsInstallationService"></label>
                </div>

                <div class="form-check form-check-inline">
                  @*<input asp-for="Advertisement.Chinese" class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3"  />
                  <label asp-for="Advertisement.Chinese"></label>*@
                </div>

                <div class="form-check form-check-inline">
                  <input asp-for="InstallationServiceFee" class="form-check-input" type="checkbox" id="inlineCheckbox3" value="
"  />
